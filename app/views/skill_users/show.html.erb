<h1><%= t "user.add_skill" %></h1>
<%= link_to t("general.profile"), @user, class: "btn btn-info" %><br>
<aside class= "col-md-6">
  <div class= "list-skill">
    <%= render "skill" %>
  </div>
</aside>
<aside class= "col-md-6">
  <%= form_for @user, remote: true do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="row">
      <table class="table">
        <%= f.collection_check_boxes :skill_ids, @skills, :id, :name do |b| %>
          <tr>
            <%= b.label do %>
              <th><%= b.text %></th>
              <th class="selection_checkbox"><%= b.check_box %></th>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
    <%= f.submit t("general.submit"), class: "btn btn-success" %>
  <% end %>
</aside>
