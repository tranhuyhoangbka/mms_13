<% provide :title, @user.name %>
<div class="col-md-4">
  <h1><%= t "general.profile" %></h1>
  <ul class="list_group">
    <li class="list-group-item list-group-item-info">
      Name : <strong><%= @user.name %></strong>
    </li>
    <li class="list-group-item list-group-item-info">
      Email : <strong><%= @user.email %></strong>
    </li>
    <li class="list-group-item list-group-item-info">
      Birthday : <strong><%= @user.birthday %></strong>
    </li>
    <% if @position.present? %>
      <li class="list-group-item list-group-item-info">
        Position : <strong><%= @position.name %></strong>
      </li>
    <% end %>
    <% if @team.present? %>
      <li class="list-group-item list-group-item-info">
        Team : <strong><%= @team.name %></strong>
      </li>
    <% end %>
    <% if @projects.present? %>
      <li class="list-group-item list-group-item-info">
        Project : <strong><%= @projects %></strong>
      </li>
    <% end %>
    <% if @skills.present? %>
      <li class="list-group-item list-group-item-info">
        Skills : <strong><%= @skills %></strong>
      </li>
    <% end %>
  </ul>
</div>