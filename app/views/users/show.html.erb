<% provide :title, @user.name %>
<div class="col-md-6 col-md-offset-3">
  <h1 class="text-danger"><%= t "general.profile" %></h1>
  <table class="table table-striped">
    <tr>
      <th><%= t "general.name" %></th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th><%= t "general.email" %></th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th><%= t "general.birthday" %></th>
      <td><%= @user.birthday.strftime "%d-%m-%Y" %></td>
    </tr>
    <tr>
      <th><%= t "position.position" %></th>
      <td><%= @position.name %></td>
    </tr>
    <tr>
      <th><%= t "team.team" %></th>
      <td><%= @team.name if @team.present? %></td>
    </tr>
    <tr>
      <th><%= t "general.menu_item_projects" %></th>
      <td><%= @projects if @projects.present? %></td>
    </tr>
    <tr>
      <th><%= t "general.menu_item_skills" %></th>
      <td><%= @skills if @skills.present? %></td>
    </tr>
  </table>
  <%= link_to t("user.add_skill"), user_add_skill_path(@user), class:"btn btn-success" %>
</div>
