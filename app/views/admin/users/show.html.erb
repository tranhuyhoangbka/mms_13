<div class="col-md-8 col-md-offset-2">
  <h3><%= @user.name %></h3>
  <%= image_tag @user.avatar.url, class: "img-responsive", 
                                  size: Settings.general.size_image %>
  <%= link_to t("general.edit"), edit_admin_user_path(@user), class: "btn btn-info" %>
  <%= link_to t("general.delete"), admin_user_path(@user), method: :delete, 
      data: {confirm: t("general.confirm_delete")}, class: "btn btn-danger" %>
  <div class="user_info well">
    <%= t "general.download" %> <%= link_to t("general.csv"), admin_user_path(format: :csv) %>
    <table class="table table-striped">
      <tr>
        <th><%= t "user.email" %></th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th><%= t "user.birthday" %></th>
        <td><%= @user.birthday %></td>
      </tr>
      <tr>
        <th><%= t "team.team" %></th>
        <td><%= @user.team.name if @user.team %></td>
      </tr>
      <tr>
        <th><%= t "position.position" %></th>
        <td><%= @positions if @positions %></td>
      </tr>
      <tr>
        <th><%= t "user.joined_project" %></th>
        <td><%= @user.projects.pluck(:name).join(", ") if @user.projects.any? %></td>
      </tr>
    </table>
  </div>
</div>