<%= form_for [:admin, @skill] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  
  <div class="field">
    <%= f.label t "general.name" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="controls">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
