<h1><%= t "skill.create_skill" %></h1>
<div class="col-md-6 col-md-offset-3">
  <%= render "form" %>
</div>

<div class="skills col-md-8 col-md-offset-2">
  <h2><%= t "skill.all_skills" %></h2>
  <% if @skills.any? %>
    <%= t "general.download" %>  
    <%= link_to t("general.csv"), admin_skills_path(format: :csv) %>
    <table class="table table-striped">
      <tr>
        <th><%= t "general.id" %></th>
        <th><%= t "general.name" %></th>
        <th colspan="2"></th>
      </tr>
      <%= render @skills %>
    </table>
  <% else %>
    <h3><%= t "skill.no_skill" %></h3>
  <% end %>
</div>
