<%= form_for [:admin, @position] do |f| %>
  <div class="fields">
    <%= f.label t "general.name" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label t "position.abbreviation" %>
    <%= f.text_field :abbreviation, class: "form-control" %>
  </div>
  <div class="controls">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>