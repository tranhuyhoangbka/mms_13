<% provide :title, t("project.project_create") %>
<div class="col-md-6 col-md-offset-3">
  <h1><%= t "project.project_create" %></h1>
  <%= form_for [:admin, @project] do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :abbreviation %><br>
      <%= f.text_field :abbreviation, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :start_date %><br>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :end_date %><br>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :team_id %><br>
      <%= f.collection_select :team_id, @teams, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :leader_id %><br>
      <%= f.collection_select :leader_id, @users, :id, :name %>
    </div>
    <div class="actions">
      <%= f.submit t("general.create"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>