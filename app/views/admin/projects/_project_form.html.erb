<%= form_for [:admin, @project] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :abbreviation %><br>
    <%= f.text_field :abbreviation, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :team_id %><br>
    <%= f.collection_select :team_id, @teams, :id, :name, prompt: true %>
  </div>
  <div class="field">
    <%= f.label :leader_id %><br>
    <% if @users.present? %>
      <%= f.collection_select :leader_id, @users, :id, :name, prompt: true %>
    <% else %>
      <%= f.collection_select :leader_id, [], :id, :name, prompt: true %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit t "general.submit", class: "btn btn-primary" %>
  </div>
<% end %>